        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="480" Width="800">
    <Grid>

        <StackPanel Width="250" HorizontalAlignment="Left" OpacityMask="Black">
            
            <TextBlock FontSize="20" TextWrapping="Wrap">
                <Hyperlink x:Name="LnkBubble" Foreground="Black" Click="LnkBubble_Click" >
                    Bubble策略
                </Hyperlink>
            </TextBlock>

            <TextBlock FontSize="20" TextWrapping="Wrap">
                <Hyperlink x:Name="LnkTunnel" Foreground="Black" Click="LnkTunnel_Click" >
                    Tunnel策略
                </Hyperlink>
            </TextBlock>

            
        </StackPanel>


        <Frame Name="pc" HorizontalAlignment="Right" NavigationUIVisibility="Hidden" BorderBrush="Black" Width="480"/>
    </Grid>
</Window>
