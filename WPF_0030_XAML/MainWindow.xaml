<Window x:Class="WPF_0030_XAML.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="XAML 测试" Height="370.274" Width="794.97">

    <StackPanel Background="LightBlue">

        <Label Content="新建项目的时候，默认容器是 Grid， 这里变更为 StackPanel, 也就是自动按顺序组织控件位置，不需要设置 相对坐标。"  Margin="5,10"/>

        <TextBox x:Name="txtFirstUser" Height="23" TextWrapping="Wrap" Text="x:Name 是控件名字" Margin="5,10"/>
        <TextBox x:Name="txtLastName"  Height="23" TextWrapping="Wrap" Text="Margin 是控件边距" Margin="5,10"/>

        <StackPanel Orientation="Horizontal">
            <Label Content="StackPanel 有个属性是 Orientation， 可以选择 横向或者是纵向。"  Margin="5,10"/>
            <Button x:Name="btnQuery" Content="查询" Width="75" Margin="5,10"/>
            <Button x:Name="btnEdit"  Content="编辑" Width="75" Margin="5,10"/>
        </StackPanel>



        <Button x:Name="btnImageButton" Margin="5,10">
            <Image Source="close.png" Height="24" />
        </Button>
        

    </StackPanel>

</Window>
