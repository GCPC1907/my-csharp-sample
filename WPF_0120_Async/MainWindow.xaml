<Window x:Class="WPF_0120_Async.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"  Height="480" Width="800">


    <Grid>
        
        
        <StackPanel Width="250" HorizontalAlignment="Left" OpacityMask="Black">
            
            <TextBlock FontSize="18" TextWrapping="Wrap">
                <Hyperlink x:Name="LnkSimpleAsync" Foreground="Black" Click="LnkSimpleAsync_Click"  >
                    简单异步处理
                </Hyperlink>
            </TextBlock>

            <TextBlock FontSize="18" TextWrapping="Wrap">
                <Hyperlink x:Name="LnkIsAsync" Foreground="Black" Click="LnkIsAsync_Click"  >
                    IsAsync
                </Hyperlink>
            </TextBlock>


            <TextBlock FontSize="18" TextWrapping="Wrap">
                <Hyperlink x:Name="LnkPropertyChanged" Foreground="Black" Click="LnkPropertyChanged_Click"  >
                    PropertyChanged
                </Hyperlink>
            </TextBlock>
            

        </StackPanel>


        <Frame Name="pc" HorizontalAlignment="Right" NavigationUIVisibility="Hidden" BorderBrush="Black" Width="480"/>
    </Grid>
</Window>
