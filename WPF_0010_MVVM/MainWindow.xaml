<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WpfApplication1.ViewModel"
        Title="MainWindow" Height="237" Width="215">
    <Grid>
        <Button Content="提 交" HorizontalAlignment="Left" Margin="64,145,0,0" VerticalAlignment="Top" Width="75" Command="{Binding SetTextCommand}"/>
        <TextBox x:Name="tb" HorizontalAlignment="Left" Height="23" Margin="64,31,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding Input}"/>
        <Label HorizontalAlignment="Left" Margin="64,80,0,0" VerticalAlignment="Top" Content="{Binding Display}" />
        <Label Content="输入" HorizontalAlignment="Left" Margin="10,31,0,0" VerticalAlignment="Top" Width="47"/>
        <Label Content="输出" HorizontalAlignment="Left" Margin="10,80,0,0" VerticalAlignment="Top" Width="38" RenderTransformOrigin="0.447,0.462"/>
    </Grid>
</Window>
