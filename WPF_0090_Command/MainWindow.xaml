<Window x:Class="WPF_0090_Command.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="480" Width="800">
    <Grid>
        <StackPanel Width="250" HorizontalAlignment="Left" OpacityMask="Black">
            <TextBlock FontSize="20" TextWrapping="Wrap">
                <Hyperlink x:Name="LnkClear" Foreground="Black" Click="LnkClear_Click" >
                    简单测试 Clear Command
                </Hyperlink>
            </TextBlock>


            <TextBlock FontSize="20" TextWrapping="Wrap">
                <Hyperlink x:Name="LnkCommandParameter" Foreground="Black" Click="LnkCommandParameter_Click" >
                    CommandParameter
                </Hyperlink>
            </TextBlock>

        </StackPanel>


        <Frame Name="pc" HorizontalAlignment="Right" NavigationUIVisibility="Hidden" BorderBrush="Black" Width="480"/>
    </Grid>
</Window>
